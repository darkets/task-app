{{ include('partials/head.twig') }}
{{ include('partials/navbar.twig') }}

<div class="hero">
    <div class="heading">
        <h1>Tasks</h1>
        <a href="/create" class="button">Create</a>
    </div>

    <div class="tasks-container">
        {% if tasks.isEmpty %}
            <div class="task-container">
                <div>
                    <h2>There are no current tasks</h2>
                    <p>Add one by pressing the 'Create' button above.</p>
                </div>
            </div>
        {% endif %}

        {% for task in tasks.get %}
            <div class="task-container">
                <div>
                    <h2>{{ task.name }}</h2>
                    <p>{{ task.description }}</p>
                    <p class="created-at">Date created: {{ task.createdAt }}</p>
                </div>

                <form method="post" action="/delete/{{ task.id }}" style="display: inline;">
                    <button class="button" type="submit" onclick="return confirm('Are you sure you want to delete this task?')">
                        Delete
                    </button>
                </form>
            </div>
        {% endfor %}
    </div>
</div>

